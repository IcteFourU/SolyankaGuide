<UserControl x:Class="SolyankaGuide.GuideControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolyankaGuide"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <CubicEase x:Key="CubicEaseOut" EasingMode="EaseOut"/>
        <CubicEase x:Key="CubicEaseIn" EasingMode="EaseIn"/>
        <Storyboard x:Key="ShowSidePanel">
            <DoubleAnimation Storyboard.TargetName="SidePanelTransform" Storyboard.TargetProperty="X" To="0" Duration="0:0:0.25" EasingFunction="{StaticResource CubicEaseOut}"/>
        </Storyboard>
        <Storyboard x:Key="HideSidePanel">
            <DoubleAnimation Storyboard.TargetName="SidePanelTransform" Storyboard.TargetProperty="X" To="-350" Duration="0:0:0.25" EasingFunction="{StaticResource CubicEaseIn}"/>
        </Storyboard>
        <Style x:Key="ElementsStyle" TargetType="RadioButton">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Segoe UI, Noto Sans, Arial, Times New Roman"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#DDFFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#FFD700"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="ElementsBorder" Grid.Column="0" Background="#EE1A1A1A" VerticalAlignment="Stretch" Width="350">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SidePanelTransform" X="-350"/>
            </Border.RenderTransform>
            <Grid>
                <ScrollViewer x:Name="Scroller" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Hidden" ScrollChanged="OnScrollChanged">
                    <StackPanel x:Name="Elements" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                </ScrollViewer>
                <Rectangle x:Name="TopFade" Height="24" VerticalAlignment="Top" IsHitTestVisible="False" Visibility="Collapsed">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#AA000000" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="BottomFade" Height="24" VerticalAlignment="Bottom" IsHitTestVisible="False" Visibility="Collapsed">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                            <GradientStop Color="#AA000000" Offset="0"/>
                            <GradientStop Color="#00000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
        </Border>
        <local:DescriptionControl x:Name="DescControl" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Visibility="Hidden"/>
        <local:DescriptionGridControl x:Name="DescGridControl" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Visibility="Hidden" Background="#00000000"/>
        <Border Grid.Column="2" Background="#00000000" HorizontalAlignment="Right">
            <StackPanel Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}">
                <Button Width="50" Height="50" Click="VKLink" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="25">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Internals/Images/vk.png" Stretch="Uniform" Width="50" Height="50" Cursor=""/>
                </Button>
                <Button Width="50" Height="50" Click="DiscordLink" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="25">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Internals/Images/discord.png" Stretch="Uniform" Width="50" Height="50" Cursor=""/>
                </Button>
                <Button Width="50" Height="50" Click="YoutubeLink" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="25">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="/Internals/Images/yt.png" Stretch="Uniform" Width="50" Height="50"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
