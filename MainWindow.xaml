<Window x:Class="SolyankaGuide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolyankaGuide"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Title="Гид по «Народной Солянке» OGSR 2026" Height="720" Width="1280">
    <WindowChrome.WindowChrome>
        <WindowChrome
        CaptionHeight="36"
        ResizeBorderThickness="6"
        GlassFrameThickness="0"
        UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="BGImage" Grid.RowSpan="5" Stretch="UniformToFill"/>
        <local:TitleControl Grid.Row="0"/>
        <Border Grid.Row="1" Background="#33FFFFFF"/>
        <local:CatergoriesControl Grid.Row="2"/>
        <Border Grid.Row="3" Background="#33FFFFFF"/>
        <local:GuideControl Grid.Row="4"/>
    </Grid>
</Window>
